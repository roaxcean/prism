{
  "name": "prism",
  "type": "module",
  "version": "1.0.1",
  "description": "Probably Repairs Inconsistent Semi-transparency",
  "bin": {
    "prism": "./src/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build:bundle": "esbuild src/cli.js --bundle --platform=node --format=cjs --outfile=dist/prism.cjs --external:sharp",
    "build": "npm run clean && npm run build:bundle && echo '\n\n ; NOTE: To run PRISM run \"node ./dist/prism.cjs -h\".\n\n'"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "d3-delaunay": "^6.0.4",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "esbuild": "^0.25.6",
    "pkg": "^5.8.1"
  }
}
